<%= simple_form_for [@airdrop, Invite.new], url: new_airdrop_invite_path(@airdrop) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :nickname %>
    <!-- here fill already the place with his email since we have acces -->

    <%= f.input :email %>
    <h1>the crypto used here is : <%= airdrop.crypto %> </h1>
    <p> add the good public key </p>

    <%= f.input :public_key %>
    <%= f.button :submit %>
  </div>

<% end %>
